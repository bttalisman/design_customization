<h1><%= @palette.name.to_s %></h1>


<%
if (@my_colors.length > 0) then %>
  <h3>Colors</h3>
  <ul style='width:150px;'>
<%
  @my_colors.each do |c| %>
    <li style='height:30px;'> <%= link_to c.hex_code, c %> <div style='display:inline-block; float:right; height:27px; width:27px; background:<%= c.hex_code %>'></div></li>
<%
  end %>
  </ul>
<%
end %>



<a class='btn btn-default' href='<%= edit_palette_path %>'>Edit this Palette</a>
<a class="btn btn-default" href="/palettes/<%= @palette.id %>"  data-method="delete" rel="nofollow">Delete</a>
