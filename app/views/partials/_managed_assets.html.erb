
<%
  index = 0
  @assets.each { |asset|
    if index % 2 == 0
      image_div_style = 'float:right; margin-left:10px;'
    else
      image_div_style = 'float:left; margin-right:10px;'
    end
    index += 1

    has_image = !asset.image.original_filename.nil?

    if has_image
      text_div_style = 'width:75%;'
    else
      text_div_style = 'width:100%;'
    end
%>
    <div style='<%= image_div_style.to_s %> width:20%; display:inline-block; position:relative;'>
<%    if has_image %>
        <a onclick='image_click("<%= asset.image.url.to_s %>");'>
          <%= image_tag( asset.image, { width: '100%', height: '100%' } ) %>
        </a>
<%    end %>
    </div>

    <div style='<%= text_div_style.to_s %> vertical-align:top; display:inline-block; position:relative;'>
      <p class=''>
<%=     asset.description.to_s %>
      </p>
    </div>
    <div style='display:inline-block; width:100%; height:5px;'></div>
<%
  } %>

<script>

  function image_click( url )
  {
    window.open( url );
  }

</script>
