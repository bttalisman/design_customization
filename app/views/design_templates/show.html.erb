<h1><%= @design_template.name.to_s %> Template</h1>

<p>File: <%= image_tag @design_template.original_file.url %></p>
<p>Source Folder: <%= @folder %></p>
<p>Prompts: <%= @design_template.prompts %></p>



<%
if (@versions.length > 0) then
%>
  <h3>Versions</h3>

  <ul>
<%
  @versions.each do |v| %>
    <li> <%= link_to v.name, v %> </li>
<%
  end
%>
  </ul>
<%
end
%>

<a class='btn' href='<%= edit_design_template_path %>'>Edit</a>
