<div class='row'>
  <div class='col col-md-1'></div>
  <div class='col col-md-4'>

    <div class='panel panel-default'>
      <div class='panel-heading'>
        <h3 class='panel-title'><%= @version.name.to_s %></h3>
      </div>
      <div class='panel-body'>

        <div class='input-group' style='margin-bottom:20px;'>
          <span class='input-group-addon' id='basic-addon1'>Template</span>
          <span class='form-control' aria-describedby='basic-addon1'>
            <%= link_to @design_template.name, @design_template %>
          </span>
        </div>

        <div class='input-group' style='margin-bottom:20px;'>
          <span class='input-group-addon' id='basic-addon2'>Output Folder</span>
          <input type='text' disabled class='form-control'
            id='version_output_folder_path' title='<%= @version.output_folder_path %>'
            value='<%= @version.output_folder_path %>' name='version[output_folder_path]'>
          </input>
        </div>

        <a class='btn btn-default' href='<%= edit_version_path %>'>Edit this Version</a>
        <a class='btn btn-default' href='/versions/<%= @version.id %>'
          data-confirm='Are you sure?' data-method='delete' rel='nofollow'>Delete</a>
        <a class='btn btn-default' onclick='update_render_folder();' >Check for Renderings</a>

      </div> <!-- /panel body -->
    </div> <!-- / panel -->
  </div> <!-- / col -->


  <div class='col col-md-1'>
  </div>

  <div class='col col-md-5'>
    <div class='panel panel-default'>
      <div class='panel-heading'>
        <h3 class='panel-title'>Render</h3>
      </div>
      <div class='panel-body'>

<%      if @render_image_count > 0 %>
          <img src='<%= @render_image_url.to_s %>' width='300'
            class='reel'
            id='image'
            data-velocity='2'
            data-frames='<%= @render_image_count.to_s %>'
            data-images='<%= @render_url.to_s %>'>
<%      else %>
          No rendered images yet.
<%      end %>

      </div> <!-- / panel body -->
    </div> <!-- /panel -->
  </div>

  <div class='col col-md-1'>
  </div>

</div>


<script>

  function update_render_folder()
  {
    $.ajax({
      url: '/versions/<%= @version.id.to_s %>/update_render_folder',
    }).done(function() {
    });
  }

</script>
