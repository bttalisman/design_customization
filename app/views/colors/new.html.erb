<%=
form_for @color do |form|
%>

  <div class='row'>
    <div class='col col-md-1'></div>
    <div class='col col-md-4'>

      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">New Color</h3>
        </div>
        <div class="panel-body">

          <div class="form-group">
              <input type="text" id="hex_code" name='color[hex_code]' class="form-control" data-control="hue" value="#000000">
          </div>
          <div class='spacer'></div>

          <div class='alert alert-warning'>Customers may see this description!</div>
          <div class='input-group'>
            <span class="input-group-addon" id="basic-addon1">Description</span>
            <input type='text' class='form-control' id='color_description' name='color[description]' aria-describedby="basic-addon1" ></input>
          </div>
          <div class='spacer'></div>


          <input type='submit' class='btn btn-default'></input>
          <a class='btn btn-default' href='/colors'>Cancel</a>

        </div> <!-- / panel body -->
      </div> <!-- / panel -->
    </div> <!-- / col -->
  </div> <!-- / row -->
<%
end
%>

<script>

  $(document).ready(function(){

    $('#hex_code').minicolors( {
        theme: 'bootstrap'
    });

  });

</script>
