
<form action='update' id='color_form'>

  <div class="input-group" id="new_color_picker_container">
    <input type="text" id="color_val" name='color[hex_code]' value="<%= @color.hex_code %>" class="form-control" />
    <span class="input-group-addon"><i></i></span>
  </div>

  <input class='btn btn-default' type='submit' value='Ok'></input>

</form>



<script>

  $(document).ready(function(){

    $("#new_color_picker_container").colorpicker({});
  });

</script>
