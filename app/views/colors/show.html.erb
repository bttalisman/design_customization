


<div class='row'>
  <div class='col col-md-1'></div>
  <div class='col col-md-4'>

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Color</h3>
      </div>
      <div class="panel-body">

        <div class="input-group" id="new_color_picker_container">
          <input type="text" disabled id="hex_code" name='color[hex_code]' class="form-control" data-control="hue" value="<%= @color.hex_code %>">
        </div>
        <div class='spacer'></div>


        <a class='btn btn-default' href='<%= edit_color_path %>'>Edit this Color</a>
        <a class="btn btn-default" href="/colors/<%= @color.id %>"  data-method="delete" rel="nofollow">Delete</a>


      </div> <!-- / panel body -->
    </div> <!-- / panel -->
  </div> <!-- / col -->
</div> <!-- / row -->


<script>

  $(document).ready(function(){

    $('#hex_code').minicolors( {
        theme: 'bootstrap'
    });

  });

</script>
